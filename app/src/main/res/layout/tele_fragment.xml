<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_red_dark"
    android:padding="15dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/tote_level"
        android:id="@+id/tv_grey"
        android:textSize="50dp"
        android:layout_marginTop="90dp"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:text="@string/minus"
        android:id="@+id/btn_sub_tote_level"
        android:layout_below="@+id/tv_grey"
        android:layout_alignLeft="@+id/tv_can"
        android:layout_alignStart="@+id/tv_can"
        android:textSize="70dp"
        android:textAlignment="center"
        android:paddingBottom="10dp" />

    <Button
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:text="@string/plus"
        android:id="@+id/btn_add_tote_level"
        android:layout_below="@+id/tv_grey"
        android:layout_alignRight="@+id/tv_grey"
        android:layout_alignEnd="@+id/tv_grey"
        android:textSize="70dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/can_level"
        android:id="@+id/tv_can"
        android:textSize="50dp"
        android:layout_marginTop="78dp"
        android:layout_alignRight="@+id/tv_grey"
        android:layout_alignEnd="@+id/tv_grey"
        android:layout_centerVertical="true" />

    <Button
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:text="@string/plus"
        android:id="@+id/btn_add_can_level"
        android:layout_below="@+id/tv_can"
        android:layout_alignRight="@+id/tv_can"
        android:layout_alignEnd="@+id/tv_can"
        android:textSize="70dp" />

    <Button
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:text="@string/minus"
        android:id="@+id/btn_sub_can_level"
        android:layout_alignTop="@+id/btn_add_can_level"
        android:layout_alignLeft="@+id/tv_grey"
        android:layout_alignStart="@+id/tv_grey"
        android:textSize="70dp"
        android:paddingBottom="10dp" />

    <Button
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:text="@string/add_stack"
        android:id="@+id/btn_add_stack"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textSize="20dp"
        android:onClick="addStackTele" />

    <TextView
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/txt_tote_level"
        android:textColor="#ffffffff"
        android:layout_alignTop="@+id/btn_add_tote_level"
        android:layout_toLeftOf="@+id/btn_add_tote_level"
        android:layout_toStartOf="@+id/btn_add_tote_level" />

    <TextView
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/txt_can_level"
        android:textColor="#ffffffff"
        android:layout_alignTop="@+id/btn_add_can_level"
        android:layout_toRightOf="@+id/btn_sub_tote_level"
        android:layout_toEndOf="@+id/btn_sub_tote_level" />

</RelativeLayout>