<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    android:background="@android:color/holo_red_dark"
    android:id="@+id/auto_frag_bg">

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/robot_set"
        android:id="@+id/auto_robot_checkbox"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#ffffffff"
        android:layout_marginBottom="20dp"
        android:textSize="40dp"
        android:checked="false" />

    <EditText
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/auto_tote_number"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="20dp"
        android:hint="# of Totes Put In Auto Zone"
        android:textSize="25dp"
        android:layout_below="@+id/auto_robot_checkbox" />

    <EditText
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/auto_container_number"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="false"
        android:layout_marginBottom="20dp"
        android:hint="#  of Containers Put In Auto Zone"
        android:textSize="25dp"
        android:layout_below="@+id/auto_tote_number" />

    <EditText
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/auto_totes_stacked_number"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="# of Totes Stacked"
        android:textSize="25dp"
        android:layout_below="@+id/auto_container_number" />

</RelativeLayout>